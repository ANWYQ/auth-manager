{
  // 基础信息
  "system_name": "9ENT 授权系统",
  "version": "1.0",
  "last_updated": "2025-03-30",

  // 授权码列表 (核心配置)
  "licenses": [
    {
      // 基础信息
      "key": "VIP-8888",                  // 授权码(必须唯一)
      "holder": "VIP用户",                // 持有人姓名
      "expiry": "2025-04-01",            // 过期日期(YYYY-MM-DD)
      
      // 设备控制
      "max_devices": 1,                   // 允许绑定的最大设备数
      "devices": [                        // 已绑定的设备ID
        "device123",
        "device456"
      ],

      // 状态控制
      "active": true,                     // 是否激活
      "allow_offline": false,              // 是否允许离线使用
      "offline_days": 7                   // 离线可用天数
    },
    {
      "key": "TRIAL-001",
      "holder": "试用用户",
      "expiry": "2023-12-01",
      "max_devices": 1,
      "devices": ["device789"],
      "active": true,
      "allow_offline": false
    }
  ],

  // 黑名单 (禁止使用的设备或授权码)
  "blacklist": {
    "devices": ["hacked_device"],
    "keys": ["PIRATED-KEY"]
  },

  // 系统消息 (会显示给用户)
  "messages": [
    {
      "title": "系统维护通知",
      "content": "11月25日凌晨2-4点系统升级",
      "show_from": "2023-11-20",
      "show_until": "2023-11-24"
    }
  ],

  // 版本控制
  "updates": {
    "min_version": "6.0",                // 支持的最低脚本版本
    "download_url": "https://example.com/update"
  },

  // 简单规则配置
  "rules": {
    "check_device": true,                // 是否验证设备ID
    "allow_multi_device": false           // 是否允许多设备
  }
}
